[Unit]
Description=Android Auto Module Common Service
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm -f android-auto-module-common
ExecStart=/usr/bin/docker run \
  --name android-auto-module-common \
  android-auto-module-common:
ExecStop=/usr/bin/docker stop android-auto-module-common

[Install]
WantedBy=multi-user.target
